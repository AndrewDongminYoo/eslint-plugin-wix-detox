{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.md"],
      "parser": "@babel/eslint-parser"
    }
  ],
  "rules": {
    "semi": ["error", "always"],
    "id-length": [
      1,
      {
        "exceptions": ["_"],
        "min": 2
      }
    ]
  }
}
